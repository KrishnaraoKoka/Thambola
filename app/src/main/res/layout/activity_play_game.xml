    <TextView
        android:text="Board Count 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_below="@+id/play"
        android:layout_alignTop="@id/textView10"
        android:layout_alignRight="@id/gridLayout"
        android:layout_toRightOf="@+id/Number"
        android:textColor="@color/colorblack"
        android:layout_toEndOf="@+id/Number" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/Number"
        android:layout_alignTop="@id/txtShTkt"
        android:textColor="@color/colorblack"
        android:text="LstNum" />

    <TextView
        android:text="New Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnUpdates"
        android:layout_alignLeft="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout"
        android:id="@+id/btnNew"
        android:background="@color/colorWhite"
        android:textColor="@color/colorblack"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etEnterTkt"
        android:maxLength="3"
        android:width="50dp"
        android:layout_alignBottom="@id/btnUpdates"
        android:layout_below="@+id/gridLayout"
        android:layout_toRightOf="@+id/btnUpdates"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner_txtview"
        android:gravity="center"
        android:visibility="invisible"/>
    <TextView
        android:text="Showtkt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showTicket"
        android:id="@+id/txtShTkt"
        android:layout_below="@+id/Number"
        android:layout_alignTop="@id/btnNew"
        android:layout_marginLeft="5dp"
        android:layout_alignLeft="@+id/etEnterTkt"
        android:textColor="@color/colorblack"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txtShowHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_alignLeft="@id/Number"
        android:textColor="@color/blue"
        android:text="" />

</RelativeLayout>
